<Window x:Class="FireLog.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#f4f4f4">
    <Grid x:Name="MainGrid">
        <Border Background="White" CornerRadius="10" Padding="40" Width="400" Height="350" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid>
                <StackPanel>
                    <TextBlock Text="Please log in!" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Username" Margin="0,0,0,5" Foreground="#666"/>
                    <TextBox Name="UsernameTextBox" Height="30" Padding="5" Background="#f0f0f0" BorderThickness="0" Margin="0,0,0,15"/>

                    <TextBlock Text="Password" Margin="0,0,0,5" Foreground="#666"/>
                    <PasswordBox Name="PasswordBox" Height="30" Padding="5" Background="#f0f0f0" BorderThickness="0" Margin="0,0,0,25"/>
                    <Button x:Name="btn_LogIn" Content="Log In" Height="35" Background="#0078D7" Foreground="White" BorderBrush="{x:Null}" FontWeight="Bold" Cursor="Hand" Click="btn_LogIn_Click"/>

                    <TextBlock x:Name="txt_CreateAccount" Text="Don't have an account? Create one" Foreground="#666" FontSize="12" HorizontalAlignment="Center" Margin="0,20,0,0" Cursor="Hand"/>
                </StackPanel>

                <!-- Překrývající se tlačítko -->
                <Button x:Name="btn_SignIn" Content="buttno na sign in"
                        Width="200" Height="25"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Margin="0,245,0,0"
                        Click="btn_SignIn_Click"
                        Background="#e0e0e0"
                        Foreground="#333"
                        BorderBrush="#ccc" Opacity="0"/>
                <CheckBox x:Name="checkbox_remember" Content="Rememer me" HorizontalAlignment="Left" Margin="0,175,0,0" VerticalAlignment="Top" Width="119" Checked="checkbox_remember_Checked"/>
            </Grid>
        </Border>
    </Grid>
</Window>
