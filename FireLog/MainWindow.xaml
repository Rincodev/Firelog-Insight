<Window x:Class="FireLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FireLog Insight" Height="921" Width="1366" 
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF1F1F1F">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header/Title area -->
            <RowDefinition Height="Auto"/>
            <!-- Filters bar -->
            <RowDefinition Height="*"/>
            <!-- Main content area (DataGrid) -->
            <RowDefinition Height="Auto"/>
            <!-- Footer area -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
            <ColumnDefinition Width="Auto"/>
            <!-- Stats sidebar -->
        </Grid.ColumnDefinitions>

        <!-- Title/Header Area -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="20,10,20,0">
            <TextBlock Text="Source:" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" 
                      FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            <ComboBox x:Name="DataSourceCombo" Width="150" Margin="20,0,0,0" 
                      SelectionChanged="ComboBox_SelectionChanged" SelectedIndex="0">
                <ComboBoxItem Content="Local"/>
                <ComboBoxItem Content="Database"/>
            </ComboBox>
        </StackPanel>

        <!-- Filters Panel -->
        <Expander Grid.Row="1" Grid.ColumnSpan="2" Header="Filters" IsExpanded="True" 
                 Foreground="White" Margin="20,10,20,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filter row 1 -->
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                    <TextBlock Text="IP Address:" Foreground="White" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" Margin="0,0,0,5"/>
                    <TextBox x:Name="IpAddressFilter" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                    <TextBlock Text="Time (From):" Foreground="White" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" Margin="0,0,0,5"/>
                    <DatePicker x:Name="TimeFromFilter" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="0" Margin="5">
                    <TextBlock Text="Time (To):" Foreground="White" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" Margin="0,0,0,5"/>
                    <DatePicker x:Name="TimeToFilter" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}"/>
                </StackPanel>

                <!-- Filter row 2 -->
                <StackPanel Grid.Column="0" Grid.Row="1" Margin="5">
                    <TextBlock Text="Action:" Foreground="White" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" Margin="0,0,0,5"/>
                    <ComboBox x:Name="TypeFilter" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" SelectedIndex="0">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Allow"/>
                        <ComboBoxItem Content="Drop"/>
                    </ComboBox>
                </StackPanel>

                <!-- Port Filter (New) -->
                <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">
                    <TextBlock Text="Port:" Foreground="White" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" Margin="0,0,0,5"/>
                    <TextBox x:Name="PortFilter" FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Orientation="Vertical" VerticalAlignment="Bottom" Margin="20,5,5,5">
                    <Button x:Name="btn_apply_filters" Content="Apply Filters" Width="140" Height="35" Margin="0,0,0,10" 
                           FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" Click="btn_apply_filters_Click"/>
                    <Button x:Name="btn_reset_filters" Content="Reset Filters" Width="140" Height="35" 
                           FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" Click="btn_reset_filters_Click"/>
                </StackPanel>
            </Grid>
        </Expander>

        <!-- Main DataGrid -->
        <DataGrid x:Name="LogsDataGrid" Grid.Row="2" Grid.Column="0" 
                 AutoGenerateColumns="False" 
                 FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}" 
                 HeadersVisibility="Column" 
                 Margin="20,0,10,10"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 CanUserResizeColumns="True"
                 CanUserResizeRows="False"
                 AlternatingRowBackground="#FF2A2A2A"
                 Background="#FF262626"
                 Foreground="Black"
                 BorderBrush="#FF3A3A3A"
                 RowBackground="#FF232323">
            <!-- Bílé písmo v řádcích -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="1.5*"/>
                <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="*"/>
                <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="*"/>
                <DataGridTextColumn Header="Source IP" Binding="{Binding SrcIP}" Width="1.5*"/>
                <DataGridTextColumn Header="Destination IP" Binding="{Binding DestIP}" Width="1.5*"/>
                <DataGridTextColumn Header="Source Port" Binding="{Binding SrcPort}" Width="*"/>
                <DataGridTextColumn Header="Destination Port" Binding="{Binding DestPort}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Stats Sidebar -->
        <Grid Grid.Row="2" Grid.Column="1" Width="300" Margin="10,0,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Stats Header -->
                <RowDefinition Height="Auto"/>
                <!-- Chart -->
                <RowDefinition Height="Auto"/>
                <!-- Legend -->
                <RowDefinition Height="Auto"/>
                <!-- Stats Numbers -->
                <RowDefinition Height="Auto"/>
                <!-- Actions -->
                <RowDefinition Height="Auto"/>
                <!-- Chart Type Selection -->
                <RowDefinition Height="Auto"/>
                <!-- Action Buttons -->
                <RowDefinition Height="*"/>
                <!-- Suspicious Panel -->
            </Grid.RowDefinitions>

            <!-- Stats Header -->
            <TextBlock Grid.Row="0" Text="Event Statistics" FontSize="{DynamicResource {x:Static SystemFonts.CaptionFontSizeKey}}" 
                      FontWeight="Bold" Foreground="White" Margin="0,0,150,13" TextAlignment="Center"/>

            <!-- Chart Area -->
            <Border Grid.Row="1" Background="White" CornerRadius="5" Height="200" Margin="0,0,0,10" x:Name="ChartContainer">
            </Border>

            <!-- Legend -->
            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center"/>
            </Grid>

            <!-- Stats Numbers -->
            <Grid Grid.Row="3" Margin="161,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Count -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Total Events" FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" 
                              Foreground="White" TextAlignment="Center"/>
                    <TextBlock x:Name="TotalCountText" Text="{Binding TotalCount}" 
                              FontSize="{DynamicResource {x:Static SystemFonts.CaptionFontSizeKey}}" 
                              FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                </StackPanel>

                <!-- Allowed Count -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Allowed" FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" 
                              Foreground="LightGreen" TextAlignment="Center"/>
                    <TextBlock x:Name="AllowedCountText" Text="{Binding AllowedCount}" 
                              FontSize="{DynamicResource {x:Static SystemFonts.CaptionFontSizeKey}}" 
                              Foreground="LightGreen" TextAlignment="Center"/>
                </StackPanel>

                <!-- Blocked Count -->
                <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                    <TextBlock Text="Blocked" FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" 
                              Foreground="Red" TextAlignment="Center"/>
                    <TextBlock x:Name="BlockedCountText" Text="{Binding BlockedCount}" 
                              FontSize="{DynamicResource {x:Static SystemFonts.CaptionFontSizeKey}}" 
                              Foreground="Red" TextAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Chart Type Selection -->
            <Grid Grid.Row="4" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ChartTypeCombo" SelectionChanged="ChartTypeCombo_SelectionChanged" 
                         SelectedIndex="0" HorizontalAlignment="Left" Width="153" Margin="146,-378,0,443">
                    <ComboBoxItem Content="Pie Chart"/>
                    <ComboBoxItem Content="Protocol Distribution"/>
                </ComboBox>
            </Grid>

            <!-- Action Buttons -->
            <Grid Grid.Row="5" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="39.56"/>
                    <RowDefinition Height="0.44"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btn_enable_logs" Content="Enable Logs" 
                       Click="btn_enable_logs_Click" 
                       FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" 
                       Grid.Row="0" Margin="0,-232,150,242" Height="30"/>

                <Button x:Name="btn_extract_data" Content="Extract Data" 
                       Click="Button_Click"
                       FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" Margin="0,-197,150,207" Height="30"/>


                <Button x:Name="btn_upload_to_db" Content="Upload to DB" 
                       Click="btn_upload_to_db_Click"
                       FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" Margin="0,-162,150,172" Height="30"/>
            </Grid>

            <!-- Suspicious Panel -->
            <ScrollViewer Grid.Row="7" VerticalScrollBarVisibility="Auto">
                <Border BorderBrush="#FFFF6A00" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,0">
                    <StackPanel x:Name="SuspiciousPanel">
                        <TextBlock Text="Security Alerts" FontWeight="Bold" Foreground="White" 
                              Margin="0,0,0,10" TextAlignment="Center" 
                              FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}"/>

                        <TextBlock Text="⚠ Suspicious ports" Foreground="OrangeRed" 
                              FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" Margin="0,5"/>
                        <TextBlock Text="⚠ Unusual outgoing traffic" Foreground="OrangeRed" 
                              FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" Margin="0,5"/>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" TextWrapping="Wrap" 
                      Text="FireLog Insight: Application for firewall log analysis. Allows filtering events by IP, time, and type. Visualizes connection attempts, port blocks, and suspicious activity."
                      Foreground="Gray" FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}"/>

            <Button x:Name="btn_export_reports" Grid.Column="1" Content="Export Reports" Width="120" Height="30" Margin="0,0,10,0"
                   FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" Click="btn_export_reports_Click"/>

            <Button x:Name="btn_export_chart" Content="Export Chart" Grid.Column="2"
                   Click="btn_export_chart_Click" Width="120" Height="30"
                   FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" VerticalAlignment="Top"/>
            <Button x:Name="BtnLoadDemo"
        Content="Load Demo Data"
        Click="btn_load_demo_Click" Height="30" Width="120"
                    FontSize="{DynamicResource {x:Static SystemFonts.SmallCaptionFontSizeKey}}" Margin="0,0,10,0" HorizontalAlignment="Right"/>

        </Grid>

        <!-- Login display and logout button -->
        <Border Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" 
        BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,-25,35,0" Background="#FF2A2A2A">
            <TextBlock x:Name="txtblock_loginshow" Text="" 
               Foreground="LightGray" FontWeight="SemiBold" FontSize="14" 
               TextWrapping="Wrap" Width="128" Height="32"/>
        </Border>
        <Button x:Name="btn_logOut" Content="Log out?" HorizontalAlignment="Left" Margin="188,24,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" Height="20" Width="74" Click="btn_logOut_Click"/>
    </Grid>
</Window>